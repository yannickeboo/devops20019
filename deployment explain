apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  labels:
    environment: test
  name: testdeploy
spec:
  replicas:3
  selector:
    matchLabels:
      environment: test
  minReadySeconds: 10
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        environment: test
    spec:
    containers: 
      - name: valaxy-devops-project
        image: yannickeboo/lecours
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
      
  
  
